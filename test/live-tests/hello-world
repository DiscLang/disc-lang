begin

    let emptyResponse be ""
    let promptMessage be "What is your name? "

    let usersName be prompt: promptMessage

    repeat while usersName isEqualTo emptyResponse
        update usersName to prompt: promptMessage
    end

    let greeting be join: "Hi, " (usersName) "!"
    let message be "Your programming language works!"

    print: join: greeting " " message
    print: ""
    print: join: "I need a name, " (usersName) "."

end