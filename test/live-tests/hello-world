begin
    let promptMessage be "what is your name? "
    let name be (prompt: promptMessage)

    loop while (:: name isEqualTo "")
        update name to (prompt: promptMessage)
    end

    let greeting be join: "Hi, " (name) "!"
    let message be "Your programming language works!"

    print: join: greeting " " message
    print: ""
    print: join: "I need a name, " (name) "."
end