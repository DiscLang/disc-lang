begin

    let emptyResponse be ""
    let promptMessage be "What is your name? "

    let enteredName be prompt: promptMessage

    repeat while enteredName isEqualTo emptyResponse
        update enteredName to prompt: promptMessage
    end

    let greeting be join: "Hi, " enteredName "!"
    let message be "Your programming language works!"

    print: join: greeting " " message
    print: ""
    print: join: "I need a name, " enteredName "."

end